#![enable(implicit_some)]
#![enable(unwrap_newtypes)]
#![enable(unwrap_variant_newtypes)]
(
    default_album_art_path: None,
    show_song_table_header: true,
    draw_borders: true,
    browser_column_widths: [20, 38, 42],
    background_color: "#1a1b26",
    modal_backdrop: true,
    text_color: "#c0caf5",
    header_background_color: "#1a1b26",
    modal_background_color: "#1a1b26",
    preview_label_style: (fg: "#b48ead"),
    preview_metadata_group_style: (fg: "#88c0d0"),
    tab_bar: (
        active_style: (fg: "#7aa2f7", bg: "#1a1b26", modifiers: "Bold"),
      
        inactive_style: (fg: "#c0caf5", bg: "#1a1b26", modifiers: ""),
    ),    cava: (
    bar_width: 3, // width of a single bar in columns
       bar_spacing: 1,
    ),
    highlighted_item_style: (fg: "#7aa2f7", modifiers: "Bold"),
    current_item_style: (fg: "#2e3440", bg: "#7aa2f7", modifiers: "Bold"),
    borders_style: (fg: "#5571ab", modifiers: "Bold"),
    highlight_border_style: (fg: "#5571ab"),
    symbols: (song: "󰝚 ", dir: " ", playlist: "󰲸 ", marker: "* ", ellipsis: "..."),
    progress_bar: (
        symbols: ["", "█", "", "█", ""],
        track_style: (fg: "#1a1b26"),
        elapsed_style: (fg: "#7aa2f7"),
        thumb_style: (fg: "#7aa2f7"),
    ),
    scrollbar: (
        symbols: ["│", "█", "▲", "▼"],
        track_style: (fg: "#7aa2f7"),
        ends_style: (fg: "#7aa2f7"),
        thumb_style: (fg: "#7aa2f7"),
    ),
    song_table_format: [
        (
            prop: (kind: Property(Artist), style: (fg: "#c0caf5"),
                default: (kind: Text("Unknown"), style: (fg: "#c0caf5"))
            ),
            width: "20%",
        ),
        (
            prop: (kind: Property(Title), style: (fg: "#c0caf5"),
                highlighted_item_style: (fg: "#7aa2f7", modifiers: "Bold"),
                default: (kind: Property(Filename), style: (fg: "#c0caf5"),)
            ),
            width: "35%",
        ),
        (
            prop: (kind: Property(Album), style: (fg: "#c0caf5"),
                default: (kind: Text("Unknown Album"), style: (fg: "#c0caf5"))
            ),
            width: "30%",
        ),
        (
            prop: (kind: Property(Duration), style: (fg: "#7aa2f7"),
                default: (kind: Text("-"))
            ),
            width: "15%",
            alignment: Right,
        ),
    ],
    layout: Split(
        direction: Vertical,
        panes: [
            (
                size: "3",
                pane: Pane(Tabs),

            ),
            (
                size: "4",
                pane: Split(
                    direction: Horizontal,
                    panes: [
                        (
                            size: "100%",
                            pane: Split(
                                direction: Vertical,
                                panes: [
                                    (
                                        size: "4",
                                        borders: "ALL",
                                        pane: Pane(Header),
                                    ),
                                ]
                            )
                        ),
                    ]
                ),
            ),
            (
                size: "100%",
                pane: Split(
                    direction: Horizontal,
                    panes: [
                        (
                            size: "100%",
                            borders: "NONE",
                            pane: Pane(TabContent),
                        ),
                    ]
                ),
            ),
            (
                size: "3",
                borders: "TOP | BOTTOM",
                pane: Pane(ProgressBar),
            ),
        ],
    ),
    header: (
        rows: [
            (
                left: [
                    (kind: Text(""), style: (fg: "#c0caf5", modifiers: "Bold")),
                    (kind: Property(Status(StateV2(playing_label: "  ", paused_label: "  ", stopped_label: "  ")))),
                    (kind: Text(" "), style: (fg: "#c0caf5", modifiers: "Bold")),
                    (kind: Property(Widget(ScanStatus)))

                ],
                center: [
                    (kind: Property(Song(Title)), style: (fg: "#c0caf5",modifiers: "Bold"),
                        default: (kind: Property(Song(Filename)), style: (fg: "#d8dee9",modifiers: "Bold"))
                    )
                ],
                right: [
                    (kind: Text("󱡬"), style: (fg: "#c0caf5", modifiers: "Bold")),
                    (kind: Property(Status(Volume)), style: (fg: "#c0caf5", modifiers: "Bold")),
                    (kind: Text("%"), style: (fg: "#c0caf5", modifiers: "Bold"))
                ]
            ),
            (
                left: [
                    (kind: Text("[ "),style: (fg: "#c0caf5", modifiers: "Bold")),
                    (kind: Property(Status(Elapsed)),style: (fg: "#7aa2f7")),
                    (kind: Text(" / "),style: (fg: "#c0caf5", modifiers: "Bold")),
                    (kind: Property(Status(Duration)),style: (fg: "#7aa2f7")),
                    (kind: Text(" | "),style: (fg: "#c0caf5")),
                    (kind: Property(Status(Bitrate)),style: (fg: "#c0caf5")),
                    (kind: Text(" kbps"),style: (fg: "#c0caf5")),
                    (kind: Text("]"),style: (fg: "#c0caf5", modifiers: "Bold"))
                ],
                center: [
                    (kind: Property(Song(Artist)), style: (fg: "#7aa2f7", modifiers: "Bold"),
                        default: (kind: Text("Unknown Artist"), style: (fg: "#88c0d0", modifiers: "Bold"))
                    ),
                    (kind: Text(" - ")),
                    (kind: Property(Song(Album)),style: (fg: "#7aa2f7" ),
                        default: (kind: Text("Unknown Album"), style: (fg: "#81a1c1", modifiers: "Bold"))
                    )
                ],
                right: [
                    (kind: Text("[ "),style: (fg: "#81a1c1")),
                    (kind: Property(Status(RepeatV2(
                                    on_label: "", off_label: "",
                                    on_style: (fg: "#7aa2f7", modifiers: "Bold"), off_style: (fg: "#4c566a", modifiers: "Bold"))))),
                    (kind: Text(" | "),style: (fg: "#81a1c1")),
                    (kind: Property(Status(RandomV2(
                                    on_label: "", off_label: "",
                                    on_style: (fg: "#7aa2f7", modifiers: "Bold"), off_style: (fg: "#4c566a", modifiers: "Bold"))))),
                    (kind: Text(" | "),style: (fg: "#81a1c1")),
                    (kind: Property(Status(ConsumeV2(
                                    on_label: "󰮯", off_label: "󰮯", oneshot_label: "󰮯󰇊",
                                    on_style: (fg: "#7aa2f7", modifiers: "Bold"), off_style: (fg: "#4c566a", modifiers: "Bold"))))),
                    (kind: Text(" | "),style: (fg: "#81a1c1")),
                    (kind: Property(Status(SingleV2(
                                    on_label: "󰎤", off_label: "󰎦", oneshot_label: "󰇊", off_oneshot_label: "󱅊",
                                    on_style: (fg: "#7aa2f7", modifiers: "Bold"), off_style: (fg: "#4c566a", modifiers: "Bold"))))),
                    (kind: Text(" ]"),style: (fg: "#81a1c1")),
                ]
            ),
        ],
    ),
    browser_song_format: [
        (
            kind: Group([
                    (kind: Property(Track)),
                    (kind: Text(" ")),
                ])
        ),
        (
            kind: Group([
                    (kind: Property(Artist)),
                    (kind: Text(" - ")),
                    (kind: Property(Title)),
                ]),
            default: (kind: Property(Filename))
        ),
    ],
)
